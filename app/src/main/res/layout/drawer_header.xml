<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="173dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:paddingTop="25dp"
    android:background="@drawable/drawer_background"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatar_view"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_margin="@dimen/base_space_margin"
        android:elevation="4dp"
        android:src="@drawable/avatar"
        app:civ_border_color="#ab000000"
        />


    <TextView
        android:id="@+id/username_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/avatar_view"
        android:layout_marginLeft="@dimen/base_space_margin"
        android:layout_marginStart="@dimen/base_space_margin"
        android:text="@string/username"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#ffffff"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/username_tv"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/base_space_margin"
        android:layout_marginStart="@dimen/base_space_margin"
        android:layout_marginBottom="@dimen/base_space_margin"
        android:text="@string/email"
        android:textColor="#ffffff"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        />
</RelativeLayout>
